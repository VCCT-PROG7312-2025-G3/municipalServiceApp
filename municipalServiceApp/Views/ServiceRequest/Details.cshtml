@model municipalServiceApp.Models.ServiceRequest
@{
    ViewData["Title"] = "Service Request Details";
}

<div class="card shadow-sm p-4">
    <h3 class="mb-3">Service Request #@Model.RequestId</h3>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.RequestTitle</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Date Submitted</dt>
        <dd class="col-sm-9">@Model.DateSubmitted.ToString("f")</dd>

        <dt class="col-sm-3">Priority</dt>
        <dd class="col-sm-9">
            @if (Model.Priority == municipalServiceApp.Models.IssuePriority.Low)
            {
                <span class="badge bg-success">Low</span>
            }
            else if (Model.Priority == municipalServiceApp.Models.IssuePriority.Medium)
            {
                <span class="badge bg-warning text-dark">Medium</span>
            }
            else
            {
                <span class="badge bg-danger">High</span>
            }
        </dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <a asp-action="Index" class="btn btn-outline-secondary mt-3">Back to List</a>
</div>
