@model IEnumerable<municipalServiceApp.Models.ServiceRequest>
@{
    ViewData["Title"] = "Service Requests";
}

<h2 class="text-center mb-4">Submitted Service Requests</h2>

<table class="table table-striped table-hover shadow-sm rounded">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Date Submitted</th>
            <th>Priority</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.RequestId</td>
                <td>@item.RequestTitle</td>
                <td>@item.DateSubmitted.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (item.Priority == municipalServiceApp.Models.IssuePriority.Low)
                    {
                        <span class="badge bg-success">Low</span>
                    }
                    else if (item.Priority == municipalServiceApp.Models.IssuePriority.Medium)
                    {
                        <span class="badge bg-warning text-dark">Medium</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">High</span>
                    }
                </td>
                <td>
                    @if (item.Status == municipalServiceApp.Models.RequestStatus.Submitted)
                    {
                        <span class="badge bg-secondary">Submitted</span>
                    }
                    else if (item.Status == municipalServiceApp.Models.RequestStatus.InProgress)
                    {
                        <span class="badge bg-info text-dark">In Progress</span>
                    }
                    else if (item.Status == municipalServiceApp.Models.RequestStatus.Completed)
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.RequestId" class="btn btn-sm btn-outline-primary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<html/>